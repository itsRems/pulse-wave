{
  "compilerOptions": {
    "rootDir": "src",
    "declaration": false,
    "target": "ES2015",
    "module": "commonjs",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "outDir": "./dist",
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "strict": false
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}